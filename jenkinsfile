pipeline {
    agent any

    environment{
    DOCKERHUB_CREDENTAILS=credentails('dockerhub')
    

        stage('Run Tests') {
            steps {
                sh 'pytest || true'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t web-app:latest .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker stop web-app || true'
                sh 'docker rm web-app || true'
                sh 'docker run -d -p 5000:5000 --name web-app web-app:latest'
            }
        }
    }
}
