pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')   // Jenkins credentials ID
        IMAGE_ID = "vivekshet112/my_webapp"
    }

    stages {

        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/1ms24mc112-vivek/web-app.git',
                    branch: 'main'
                )
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_ID}:latest")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/',dockerhub) {
                        dockerImage.push("latest")
                    }
                }
            }
        }
    }
}
